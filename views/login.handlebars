<div class="container border border-dark" id="loginContainer">
     <div class="row bg-dark text-white">
          <div>
               <h3>Login</h3>
          </div>
     </div>
     <div class="row p-3">
          <form class="form login-form">
               <div class="form-group">
                    <br>
                    <label for="email-login">Email:</label>
                    <input class="form-input" type="text" id="email-login" />
               </div>
               <div class="form-group">
                    <br>
                    <label for="password-login">Password:</label>
                    <input class="form-input" type="password" id="password-login" />
               </div>
               <div class="form-group">
                    <br>
                    <button class="btn btn-primary bg-dark text-white" type="submit">Login</button>
               </div>
          </form>
     </div>
     <a href="/signup">Don't have an account? Signup here.</a>
     <br><br>
</div>

<script src="/js/login.js"></script>