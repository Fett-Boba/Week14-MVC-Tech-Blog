<div>
     {{#each posts as |post|}}
          <div class="container border border-dark">
               <div class="row bg-dark text-white">
                    <div class="col-9">
                         <h3><a href='/api/post/{{id}}'>{{post.post_title}}</a></h3>
                    </div>
                    <div class="col d-flex align-items-center">
                         <small>Posted by {{user.username}} on {{format_date post.post_date}}</small>
                    </div>
               </div>
               <div class="row p-3">
                    {{post.post_body}}
               </div>
          </div>
          <br>
     {{/each}}
</div>